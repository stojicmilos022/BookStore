@{
    Layout = null;
}
@*@model List<Student>*@
@using Modul02Termin03.ViewModels
@model BookGenreViewModel


<html>
<head>
    <title>Modify books</title>
    <link href="~/css/stylesheet.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <form method='POST' action='/Book/Modify'>
        <input type="hidden" name="oldId" value="@Model.Book.Id"/>
        <table>
            <th colspan='2'>Modify book</th>
            <tr>
                <th>Name of book :</th>
                <td><input id='BookName' type='text' name='Book.BookName' value="@Model.Book.BookName" /><span style="color:red">@Html.ValidationMessageFor(m => m.Book.BookName)</span></td>
            </tr>
            <tr>
                <th>Price of the book :</th>
                <td><input id='Price' type='number' name='Book.Price' value="@Model.Book.Price" /><span style="color:red">@Html.ValidationMessageFor(m => m.Book.Price)</span></td>
            </tr>
            <tr>
                <th>Genre of the book :</th>
                <td>
                    <select name="Book.Genre.Id">
                        @foreach (Genre genre in Model.Genres)
                        {
                            <option value="@genre.Id">@genre.GenreName</option>
                        }
                    </select><br />
                </td>
                
            </tr>
            <tr>
                <td colspan='2' style='text-align: right'><button class="button" type='submit' value='Submit'>Modify</button></td>
            </tr>
        </table>
    </form>
    <br >
    <br >
    <a href='/Book/Index'>Return to homepage</a>
</body>
</html>